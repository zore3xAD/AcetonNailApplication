<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_list_master_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView_list_item_master_photo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round"/>

        <TextView
            android:id="@+id/textView_list_item_master_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/imageView_list_item_master_photo"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Name Surname"/>

        <TextView
            android:id="@+id/textView_list_item_master_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-1dp"
            android:layout_marginLeft="8dp"
            android:text="+380665914124"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_list_item_master_photo"
            app:layout_constraintLeft_toRightOf="@+id/imageView_list_item_master_photo"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_list_item_master_type"
            app:layout_constraintVertical_bias="0.5"/>

        <TextView
            android:id="@+id/textView_list_item_master_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:text="Type"
            app:layout_constraintLeft_toRightOf="@+id/imageView_list_item_master_photo"
            app:layout_constraintTop_toBottomOf="@+id/textView_list_item_master_personal"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>